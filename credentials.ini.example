# Credentials example for individual sensors

# Copy this file to credentials.ini and edit.

[all_sensors]
url = https://sensors.codepaw.com

# wifi_credentials Format: SSID:Password;SSID2:Password2;...
# Separate each network with semicolon (;)

[sensor_1]
sensor_id = sensor_1
sensor_set_id = test
wifi_credentials = SSID:Password
bearer_token = bearer_token_for_sensor1
sda_gpio = 8
scl_gpio = 9
night_start_hour = 22
night_end_hour = 4
local_timezone = CST6CDT,M3.2.0/2,M11.1.0/2

[sensor_2]
sensor_id = sensor_2
sensor_set_id = test
wifi_credentials = SSID:Password
bearer_token = a_different_token
sda_gpio = 8
scl_gpio = 9

# Override default board type
[sensor_3]
sensor_id = sensor_3
sensor_set_id = test
wifi_credentials = SSID:Password
bearer_token = bearer_token_for_sensor3
board_type = esp32-c3-devkitm-1
sda_gpio = 5
scl_gpio = 4

[sensor_temp]
sensor_id = sensor_temp
sensor_set_id = temp
wifi_credentials = xx:xx
bearer_token = xxx
board_type = esp32-c3-devkitm-1
sda_gpio = 5
scl_gpio = 4
battery_adc_gpio = 2
night_start_hour = 22
night_end_hour = 4
# M values define start and end of Daylight Savings Time POSIX timezone format
local_timezone = CST6CDT,M3.2.0/2,M11.1.0/2