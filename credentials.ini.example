# Credentials example for individual sensors

# Copy this file to credentials.ini and edit.

[all_sensors]
url = "https://sensors.codepaw.com"

# wifi_credentials Format: SSID:Password;SSID2:Password2;...
# Separate each network with semicolon (;)

[sensor_1]
sensor_id = "sensor_1"
wifi_credentials = "SSID:Password"
bearer_token = "bearer_token_for_sensor1"
sda_gpio = 8
scl_gpio = 9
sensor_set_id = "test"
# Optional keep-alive configuration (for USB power banks)
keepalive_gpio = 18
keepalive_interval_minutes = 4
keepalive_duration_seconds = 10

[sensor_2]
sensor_id = "sensor_2"
wifi_credentials = "SSID:Password"
bearer_token = "a_different_token"
sda_gpio = 8
scl_gpio = 9
sensor_set_id = "test"
# Keep-alive disabled for this sensor (no keepalive_gpio specified)

[sensor_3]
sensor_id = "sensor_3"
wifi_credentials = "SSID:Password"
bearer_token = "another_token"
sda_gpio = 8
scl_gpio = 9
sensor_set_id = "test"
# Custom keep-alive timing
keepalive_gpio = 4
keepalive_interval_minutes = 5
keepalive_duration_seconds = 15